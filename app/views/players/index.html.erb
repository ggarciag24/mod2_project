<div class="ui form">
  <div class="labels">
<h1> All players </h1>

<h4>Search by Position:</h4>
  <%= form_tag(players_path, method: :get) do %>
    <%= select_tag :search, options_for_select(%w(PG SG SF PF C)) %>
    <%= submit_tag ("Search") %>
    <% end %>

  <% @players.each do |p| %>
    <p><%= link_to p.name, player_path(p) %></p>
  <% end %>

  <button><%=link_to "View Your Teams", teams_path %></button>

</div>
</div>
