
<h1 class="heading">Welcome to NBA Fantasy App! </h1>

<div class="ui form">
  <h2 class="secondary-heading"> Login </h2>
  <br>
    <%= form_tag "/login" do%>
    <div class="field">
    <label>User Name</label>
      <%= text_field_tag :username %>
    </div>
    <div class="field">
      <label>Password</label>
    <%= password_field_tag :password%>
    </div>
    <%= submit_tag "Log in" %>
    <% end %>
</div>

  <div class="ui form">
    <div class="field">
        <h4 class="third-heading"> New User? Create your account here</h4>
        <br>
            <button><%= link_to "Click Here", "/account"%></button>
    </div>
  </div>
