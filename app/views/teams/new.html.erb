<h1> Create your Team!</h1>

  <%= form_for @team do |f| %>
    <%= f.label "Team Name" %>
    <%= f.text_field :name %>
    <%= f.label "Choose your city" %>
    <%= f.text_field :city %>
    <%= f.label "What is your team's Mascot" %>
    <%= f.text_field "mascot" %>
    <br>
    <br><%= f.fields_for :player do |p| %>
      <%= p.label :point_guard %>
      <%= p.collection_select :player_id, Player.find_players_with_position("PG"), :id, :name %></br>
      <%= p.label :shooting_forward %>
      <%= p.collection_select :player_id, Player.find_players_with_position("SG"), :id, :name %></br>
      <%= p.label :small_foward %>
      <%= p.collection_select :player_id, Player.find_players_with_position("SF"), :id, :name %></br>
      <%= p.label :power_foward %>
      <%= p.collection_select :player_id, Player.find_players_with_position("PF"), :id, :name %></br>
      <%= p.label :center %>
      <%= p.collection_select :player_id, Player.find_players_with_position("C"), :id, :name %></br>

      <% end %>
      <br>

    <%= f.submit "Create Team!"%>

    <% end %>
